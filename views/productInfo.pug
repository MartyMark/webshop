doctype html
html 
    head
        title Simple Web Shop
        link(rel='stylesheet', href='/css/productInfo.css')
    body
        div(class='main')
            div(class='topbar')
            div(class='iconBar')
                div(class='container')
                    div(class='login_register')
                        img(id='homeBtn', src='images/home.png') 
                        a(id='loginBtn', href='/login') Login
                        a(id='registerBtn', href='/register') Register
            div(class='productCard')
                div(class='productImg') 
                    img(src=product.image_path)
                div(class='productText')
                    h4 #{product.name}
                div(class='starIcon')
                    img(src='images/star_yellow.png')
                    img(src='images/star_yellow.png')
                    img(src='images/star_yellow.png')
                    img(src='images/star_yellow.png')
                    img(src='images/star_black.png')
                div(class='productDesc') Noch #{product.stock} auf Lager
                div(class='productPrice')
                    div(class='price') #{product.price}
                div(class='button')
                    a(id='adToCard', href='/shoppingcard/add?id=' + product.id +'&price=' + product.price + '&name=' + product.name + '&stock=' + product.stock) In den Warenkorb
                <form>
                    <label for="fname">Kommentar</label>
                    <input type="text" id="fname" name="fname">
                </form>
            div(class='commentaries')
                each commentarie in commentaries
                    div(class='container')
                        h4 #{commentarie.username}
                        h3 #{commentarie.text}
            